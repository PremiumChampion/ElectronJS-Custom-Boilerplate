{
    "name": "notification-test-app",
    "productName": "notification-test-app",
    "version": "1.0.0",
    "description": "A application to test custom notification",
    "main": ".webpack/main",
    "scripts": {
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "eslint --ext .ts ."
    },
    "keywords": [],
    "author": {
        "name": "Timo Woityschyn",
        "email": "t.woityschyn.github@outlook.de"
    },
    "license": "MIT",
    "config": {
        "forge": {
            "packagerConfig": {},
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "my_new_app"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ],
            "plugins": [
                [
                    "@electron-forge/plugin-webpack",
                    {
                        "mainConfig": "./webpack.main.config.js",
                        "renderer": {
                            "config": "./webpack.renderer.config.js",
                            "entryPoints": [
                                {
                                    "html": "./src/index.html",
                                    "js": "./src/renderer.ts",
                                    "name": "main_window"
                                },
                                {
                                    "html": "./src/Notifications/notification.html",
                                    "js": "./src/Notifications/renderer.ts",
                                    "name": "notification_window"
                                }
                            ]
                        }
                    }
                ]
            ]
        }
    },
    "devDependencies": {
        "@electron-forge/cli": "^6.0.0-beta.51",
        "@electron-forge/maker-deb": "^6.0.0-beta.51",
        "@electron-forge/maker-rpm": "^6.0.0-beta.51",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.51",
        "@electron-forge/maker-zip": "^6.0.0-beta.51",
        "@electron-forge/plugin-webpack": "^6.0.0-beta.51",
        "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
        "@typescript-eslint/eslint-plugin": "^2.34.0",
        "@typescript-eslint/parser": "^2.34.0",
        "css-loader": "^3.5.3",
        "electron": "18.3.7",
        "eslint": "^6.8.0",
        "eslint-plugin-import": "^2.20.2",
        "fork-ts-checker-webpack-plugin": "^3.1.1",
        "node-loader": "^0.6.0",
        "style-loader": "^0.23.1",
        "ts-loader": "^6.2.2",
        "typescript": "^3.9.3"
    },
    "dependencies": {
        "@fluentui/react": "^7.117.0",
        "@microsoft/microsoft-graph-client": "^2.0.0",
        "@types/markdown-it": "^10.0.1",
        "@types/react": "^16.9.35",
        "@types/react-dom": "^16.9.8",
        "adaptivecards": "^2.1.0",
        "dotenv": "^8.2.0",
        "electron-squirrel-startup": "^1.0.0",
        "guid-typescript": "^1.0.9",
        "markdown-it": "^11.0.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1"
    }
}
